@page "/applicationbreakdown"
@using CheckinQrWeb.Core.Models

<MudText Typo="Typo.h1">Application breakdown</MudText>

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h3">Used components</MudText>
    </MudItem>
    <MudItem xs="12">
        <MudTable Items="@Elements" Hover="true" Breakpoint="Breakpoint.Sm" T="ExternalPackageInfo">
    <HeaderContent>
        <MudTh>Nr</MudTh>
        <MudTh>Library</MudTh>
        <MudTh>License</MudTh>
        <MudTh>LicenseLink</MudTh>
        <MudTh>ThirdPartyNotices</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@context.Number</MudTd>
        <MudTd DataLabel="Library">@context.Library</MudTd>
        <MudTd DataLabel="License">@context.License</MudTd>
        <MudTd DataLabel="LicenseLink">@context.LicenseLink</MudTd>
        <MudTd DataLabel="ThirdPartyNotices">@context.ThirdPartyNotices</MudTd>
    </RowTemplate>
</MudTable>
    </MudItem>
</MudGrid>

